<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/singleElementNumberTextView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="1."
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/singleElementNameTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/singleElementValueTextView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="30.56"
            android:textColor="#000000"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/singleElementUnitTextView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Â°C"
            android:textColor="#000000"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/singleElementSensorTextView"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Temperature sensor"
            android:textColor="#000000"
            android:textSize="12sp"/>

    </LinearLayout>


</LinearLayout>