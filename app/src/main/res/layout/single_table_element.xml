<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/singleElementNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1."
            android:textColor="#FF0000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singleElementNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="Temperature"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singleElementValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="30.56"/>

        <TextView
            android:id="@+id/singleElementUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:text="Â°C" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="  "
            android:textColor="#FF0000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="From sensor: "
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singleElementSensorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SENSOR 1"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="  "
            android:textColor="#FF0000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Date of measurement: "
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singleElementDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="12.01.2021 15:45:55" />
    </LinearLayout>


</LinearLayout>