<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/raspberry_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".View.HomePageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_home" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:text="HOME"
                    android:textColor="#E91E63"
                    android:textSize="40dp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="IP Address :"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewIpAddressHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="192.168.0.103" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Sample Time (ms):"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewSampleTimeHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Max number of samples:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewMaxNumOfSamplesHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="API version:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewApiVersionHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NAVIGATION MENU"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnGoToTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_table"
                android:text="TABLE" />

            <Button
                android:id="@+id/btnGoToGraphAngle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_chart"
                android:text="RPY" />

            <Button
                android:id="@+id/btnGoToGraphEnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_chart"
                android:text="ENV" />

            <Button
                android:id="@+id/btnGoToGraphJoyStick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_joystick"
                android:text="JOY" />

            <Button
                android:id="@+id/btnGoToLed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_led"
                android:text="LED" />

            <Button
                android:id="@+id/btnGoToConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_config"
                android:text="CONFIG" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>